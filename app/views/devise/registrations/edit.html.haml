= render :partial => 'error'
%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :multipart => true }) do |f|
  .form-group
    .new_form_width
      = f.label :first_name
      = f.text_field :first_name, autofocus: true, :class => "form-control", :placeholder => "First name"

  .form-group
    .new_form_width
      = f.label :last_name
      = f.text_field :last_name, :class => "form-control", :placeholder => "Last name"

  .form-group
    .new_form_width
      = f.label :email
      = f.email_field :email, :class => "form-control", :placeholder => "Email"

  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}

  .form-group
    .new_form_width
      = f.label :username
      = f.text_field :username, :class => "form-control", :placeholder => "Username"
      %br/

  .form-group
    .new_form_width
      = f.label :password
      = f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password"
      %small#emailHelp.form-text.text-muted Leave blank if you don't want to change it.

  .form-group
    .new_form_width
      = f.label :password_confirmation, 'Confirm Password'
      = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Confirm Password"
    %br

    - if f.object.encrypted_password.present?
      .form-group
        .new_form_width
          = f.label :current_password
          = f.password_field :current_password, autocomplete: "off", :class => "form-control", :placeholder => "Current Password"
          %small#emailHelp.form-text.text-muted We need your current password to confirm your changes.
  %hr
  %div
    %h6 Select an Avatar
    = f.label :avatar do
      = f.file_field :avatar
      = f.hidden_field :avatar_cache
    = f.label :remove_avatar
    = f.check_box :remove_avatar
  %hr
  %div
    = submit_tag 'Update', :class => 'btn btn-outline-success'
    = link_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-outline-primary'
    = link_to "Back", users_path(resource.id), :class => 'btn btn-outline-danger'
