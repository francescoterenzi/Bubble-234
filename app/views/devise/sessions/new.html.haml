= render :partial => 'error'
%h2 Log in
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-group
    .new_form_width
      = f.label :login, 'Email or Username'
      %br/
      = f.text_field :login, autofocus: true, :class => "form-control", :placeholder => "Email or username"
  .form-group
    .new_form_width
      = f.label :password, 'Enter Password'
      %br/
      = f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password"

  - if devise_mapping.rememberable?
    %div
      = f.check_box :remember_me
      = f.label :remember_me
    %hr/
    %div
      = link_to "Sign In with Twitter", "http://127.0.0.1:3000/users/auth/twitter"
      %br
      = link_to "Sign In with Google",  user_google_oauth2_omniauth_authorize_path
      %br
      = submit_tag 'Log In', :class => 'btn btn-outline-success'
      = link_to "Back", root_path, :class => 'btn btn-outline-danger'
