      .tab-content.py-4
        #profile.tab-pane.active
          %h5.mb-3 #{@user.first_name} #{@user.last_name} (#{@user.username})
          .row
            .col-md-6
              %span.badge.badge-primary
                %i.fa.fa-glass-martini
